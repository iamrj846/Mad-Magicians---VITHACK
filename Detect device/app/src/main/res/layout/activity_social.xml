<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialActivity">
    <ScrollView

        android:layout_width="match_parent"

        android:layout_height="match_parent"


        >

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical"

            android:layout_marginTop="40dp"


            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:text="OUR SOCIAL NETWORKS"
                android:layout_marginTop="60dp"
                android:textColor="#0e0606"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/fb"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/linkfb"
                android:background="@drawable/sc"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                />
            <Button
                android:id="@+id/insta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/linkin"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sc"
                />
            <Button
                android:id="@+id/twi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/linktw"
                android:layout_marginTop="20dp"
                android:background="@drawable/sc"
                android:layout_marginLeft="50dp"
                />
            <Button
                android:id="@+id/li"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/linkli"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sc"
                />




        </LinearLayout>



    </ScrollView>


</android.support.constraint.ConstraintLayout>