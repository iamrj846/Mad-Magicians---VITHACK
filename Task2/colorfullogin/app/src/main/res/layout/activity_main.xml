<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/image"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"/>

    <LinearLayout
        android:id="@+id/lntop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">

        <com.techmonk.loginui.customfonts.TextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:textAllCaps="true"
            android:text="Welcome to"/>

        <com.techmonk.loginui.customfonts.TextView_break_bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="Login"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flmiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lntop"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="312.3dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/white_border_rounded_corner"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <com.techmonk.loginui.customfonts.TextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27.3dp"
                    android:text="Username"
                    android:letterSpacing="0.1"
                    android:textAllCaps="true"
                    android:textColor="#9e9d9d"
                    android:textSize="12.3sp" />

                <com.techmonk.loginui.customfonts.EditText_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="#c2c2c2"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableRight="@drawable/usernamebg"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6.7dp"
                    android:background="#9e9e9e" />

                <com.techmonk.loginui.customfonts.TextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:textAllCaps="true"
                    android:text="Password"
                    android:letterSpacing="0.1"
                    android:textColor="#9e9d9d"
                    android:textSize="12.3sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.techmonk.loginui.customfonts.EditText_Roboto_Medium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="#333232"
                        android:drawableRight="@drawable/passwordbg"
                        android:textCursorDrawable="@drawable/cursorcolor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6.7dp"
                    android:layout_marginBottom="27dp"
                    android:background="#9e9e9e" />

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/login_button"
            android:padding="20dp"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flmiddle"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1">

            <com.techmonk.loginui.customfonts.TextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="#EFEFEF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1">

            <com.techmonk.loginui.customfonts.TextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:textColor="#EFEFEF"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>